<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.amazen.ViewController.AdminDashboardViewController">

    <top>
        <HBox spacing="10">
            <children>
                <Label text="Panel de métricas del Administrador" />
                <Button text="Refrescar" onAction="#onRefrescar"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="50"/>
                <RowConstraints percentHeight="50"/>
            </rowConstraints>

            <!-- Línea: tiempo promedio de entrega (min) por fecha de entrega -->
            <LineChart fx:id="lineTiempos" title="Tiempo promedio de entrega (min) por día"
                       GridPane.columnIndex="0" GridPane.rowIndex="0">
                <xAxis>
                    <CategoryAxis label="Fecha de entrega"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Minutos"/>
                </yAxis>
            </LineChart>

            <!-- Barras: ingresos por día (usa calcularTotal()) -->
            <BarChart fx:id="barIngresos" title="Ingresos por día (COP)"
                      GridPane.columnIndex="1" GridPane.rowIndex="0">
                <xAxis>
                    <CategoryAxis label="Fecha de creación"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="COP"/>
                </yAxis>
            </BarChart>

            <!-- Pie: incidencias por zona -->
            <PieChart fx:id="pieIncidencias" title="Incidencias por zona"
                      GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <!-- Pie: distribución por estado -->
            <PieChart fx:id="pieEstados" title="Distribución por estado"
                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <Label fx:id="lblResumen" text="—">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </Label>
    </bottom>
</BorderPane>
