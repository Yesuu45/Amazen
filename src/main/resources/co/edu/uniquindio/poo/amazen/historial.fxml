<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.amazen.ViewController.HistorialViewController"
            prefWidth="900" prefHeight="600">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Button fx:id="btnVolver" text="← Volver" onAction="#onVolver"/>
                <Label text="Historial de envíos" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="lblUsuario" text="Usuario: —" />
            </children>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tablaPedidos">
            <columns>
                <TableColumn fx:id="colId"           text="ID"             prefWidth="100"/>
                <TableColumn fx:id="colEstado"       text="Estado"         prefWidth="130"/>
                <TableColumn fx:id="colTotal"        text="Total (COP)"    prefWidth="120"/>
                <TableColumn fx:id="colCreacion"     text="Creación"       prefWidth="160"/>
                <TableColumn fx:id="colAsignacion"   text="Asignación"     prefWidth="160"/>
                <TableColumn fx:id="colEntrega"      text="Entrega"        prefWidth="160"/>
                <TableColumn fx:id="colRepartidor"   text="Repartidor"     prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <Label fx:id="lblResumen" text="0 pedidos encontrados.">
            <padding>
                <Insets top="8" right="10" bottom="8" left="10"/>
            </padding>
        </Label>
    </bottom>
</BorderPane>
