<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.amazen.ViewController.AmazenViewController"
            stylesheets="@../../../../../Assets/styles.css"
            prefHeight="520" prefWidth="720"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #eef5ff);">

    <children>

        <!-- BOTÓN CERRAR SESIÓN -->
        <Button fx:id="botonCerrarSesion"
                text="Cerrar Sesión"
                onAction="#cerrarSesion"
                layoutX="600" layoutY="20"
                styleClass="button-basic button-red"
                prefWidth="110" prefHeight="35"/>

        <!-- TARJETA PRINCIPAL GLASMORPHISM -->
        <VBox layoutX="160" layoutY="50"
              spacing="30" alignment="CENTER"
              prefWidth="400" prefHeight="420"
              styleClass="glass-card-light">

            <!-- TITULO -->
            <Label fx:id="tituloLabel"
                   text="Bienvenido a Amazen"
                   alignment="CENTER"
                   styleClass="title-label-light">
                <font>
                    <Font name="Segoe UI Bold" size="26"/>
                </font>
            </Label>

            <!-- BOTONES -->
            <VBox spacing="18" alignment="CENTER">

                <Button fx:id="botonCatalogo"
                        text="Ir al Catálogo"
                        onAction="#irAlCatalogo"
                        styleClass="button-basic button-yellow-light"
                        prefWidth="220" prefHeight="45"/>

                <Button fx:id="botonCarrito"
                        text="Ir al Carrito"
                        onAction="#irAlCarrito"
                        styleClass="button-basic button-blue-light"
                        prefWidth="220" prefHeight="45"/>

                <Button fx:id="botonHistorial"
                        text="Ver Historial"
                        onAction="#irAlHistorial"
                        styleClass="button-basic button-green-light"
                        prefWidth="220" prefHeight="45"/>

                <Button fx:id="botonEstado"
                        text="Ver Estado"
                        onAction="#irAlEstado"
                        styleClass="button-basic button-red-light"
                        prefWidth="220" prefHeight="45"/>

                <Button fx:id="botonAdmin"
                        text="Gestión Admin"
                        onAction="#irAGestionAdmin"
                        visible="false" disable="true"
                        styleClass="button-basic button-purple-light"
                        prefWidth="220" prefHeight="45"/>

                <Button fx:id="botonMisEnvios"
                        text="Mis envíos"
                        onAction="#irPanelRepartidor"
                        styleClass="button-basic button-purple-light"
                        prefWidth="220" prefHeight="45"/>

                <Button fx:id="botonGestionPerfil"
                        text="Gestionar Perfil"
                        onAction="#irGestionPerfil"
                        styleClass="button-basic button-orange-light"
                        prefWidth="220" prefHeight="45"/>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
