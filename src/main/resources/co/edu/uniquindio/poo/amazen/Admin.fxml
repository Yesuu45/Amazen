<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.amazen.ViewController.AdministradorViewController">

    <top>
        <TitledPane text="Formulario de Persona / Administrador" expanded="true">
            <content>
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="30"/>
                    </columnConstraints>

                    <!-- Fila 1 -->
                    <Label text="Documento" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtDocumento" promptText="Documento" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Nombre" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtNombre" promptText="Nombre" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <!-- Fila 2 -->
                    <Label text="Apellido" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtApellido" promptText="Apellido" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Email" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtEmail" promptText="Email" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <!-- Fila 3 -->
                    <Label text="Teléfono" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtTelefono" promptText="Teléfono" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Celular" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtCelular" promptText="Celular" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <!-- Fila 4 -->
                    <Label text="Dirección" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtDireccion" promptText="Dirección" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"/>

                    <!-- Fila 5 -->
                    <Label text="Contraseña" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <PasswordField fx:id="txtContrasena" promptText="Contraseña" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>
            </content>
        </TitledPane>
    </top>

    <center>
        <TableView fx:id="tblPersonas">
            <columns>
                <TableColumn fx:id="colDocumento" text="Documento" prefWidth="120"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="140"/>
                <TableColumn fx:id="colApellido" text="Apellido" prefWidth="140"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                <TableColumn fx:id="colCelular" text="Celular" prefWidth="120"/>
                <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="240"/>
                <TableColumn fx:id="colCargo" text="Cargo" prefWidth="140"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnCrear" text="Crear Admin" onAction="#onCrear"/>
            <Button fx:id="btnActualizar" text="Actualizar" onAction="#onActualizar"/>
            <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar"/>
            <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar"/>
            <Button fx:id="btnLoginTest" text="Probar Login (doc/clave)" onAction="#onLoginTest"/>
        </HBox>
    </bottom>
</BorderPane>
